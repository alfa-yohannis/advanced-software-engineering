apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: tts
spec:
  ingressClassName: nginx
  rules:
    - host: tts.local
      http:
        paths:
          - path: /api
            pathType: Prefix
            backend:
              service:
                name: api
                port:
                  number: 8000
          - path: /
            pathType: Prefix
            backend:
              service:
                name: web
                port:
                  number: 8000
